
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#dbdbdb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.DarkAppBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>


    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Select a Topic for Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_gravity="right"
            android:padding="16dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        
            <!--Row1-->
            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_height="141dp">
            
                <LinearLayout
                    android:id="@+id/historyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                              
                <ImageView
                    android:src="@drawable/history"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="History"/>

                </LinearLayout>   
                
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_height="141dp">
           
                <LinearLayout
                    android:id="@+id/geographyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                               
                <ImageView
                    android:src="@drawable/geography"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="Geography"/>

                </LinearLayout>
                 
            </android.support.v7.widget.CardView>

            <!--Row2-->
            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="141dp">
            
                <LinearLayout
                    android:id="@+id/spaceLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                               
                <ImageView
                    android:src="@drawable/space"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="Space"/>

                </LinearLayout>
                 
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="141dp">
            
                <LinearLayout
                    android:id="@+id/engineeringLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                               
                <ImageView
                    android:src="@drawable/engineering"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="Engineering"/>

                </LinearLayout>
                 
            </android.support.v7.widget.CardView>

            <!--Row3-->
            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="141dp">
            
                <LinearLayout
                    android:id="@+id/programmingLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                              
                <ImageView
                    android:src="@drawable/programming"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="Programming"/>

                </LinearLayout>
                 
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:layout_width="147dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="141dp">
            
                <LinearLayout
                    android:id="@+id/businessLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
               
                <ImageView
                    android:src="@drawable/business"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <View
                    android:background="@color/colorAsh"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    style="@style/topic_textView"
                    android:text="Business"/>

                </LinearLayout>
                 
            </android.support.v7.widget.CardView>

        </GridLayout>
    </ScrollView>

</LinearLayout>