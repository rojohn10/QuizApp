<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/quizImage"
        android:src="@drawable/history"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp"/>

    <TextView
        android:id="@+id/quizTopicTest"
        android:text="TOPIC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quizDescriptionText"
        android:textSize="15sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="History (from Greek ἱστορία, historia, meaning inquiry; knowledge acquired by investigation) is the study of the past.[3][4] Events occurring before the invention of writing systems are considered prehistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <Button
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:id="@+id/quizStartButton"
            android:text="Start Quiz"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/roundbutton"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
</LinearLayout>
