<?xml version="1.0" encoding="utf-8" ?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">

    <layer-list>
      <item>
        <shape>

          <gradient android:angle="270" android:startColor="@color/colorAccent" android:endColor="@color/colorAccent"/>
          <stroke android:width="1dp" android:color="@color/colorAsh"/>
          <corners android:radius="5dp"/>

        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">

    <layer-list>
      <item>
        <shape>

          <gradient android:angle="270" android:startColor="@color/colorAccent" android:endColor="@color/colorAccent"/>
          <stroke android:width="1dp" android:color="@color/colorAsh"/>
          <corners android:radius="5dp"/>

        </shape>
      </item>
    </layer-list>
  </item>

</selector>
